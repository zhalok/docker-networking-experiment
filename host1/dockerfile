FROM alpine:3.14

RUN apk update && apk upgrade

RUN apk add --no-cache iproute2 iputils tcpdump btop wget tar bash

RUN wget https://github.com/aristocratos/btop/releases/download/v1.3.0/btop-x86_64-linux-musl.tbz \
    && tar -xjf btop-x86_64-linux-musl.tbz \
    && mv btop /usr/local/bin/ \
    && rm btop-x86_64-linux-musl.tbz

CMD [ "tail", "-f", "/dev/null" ]